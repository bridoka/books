<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <style name="TextAppearance.Title.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Title.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Appearance.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/oswald</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">9sp</item>
    </style>
</resources>
